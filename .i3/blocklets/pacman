#!/bin/bash
# 
# show available pacman updates

PACMAN=$(checkupdates | wc -l)

if [ "$PACMAN" -gt 0 ]; then
    echo "<span foreground='#81A2BE'> </span>$PACMAN"
    #     
else
    exit 0
fi

case $BLOCK_BUTTON in
    # left click, read arch linux news feeds
    1) i3-msg exec "$BROWSER http://ald.mindbrain.io" > /dev/null
esac
