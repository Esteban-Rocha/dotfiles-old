#!/bin/bash
# Script to get unread google mail.
#------------------------------------------------------------------------

# User and password secured
. ~/.private/accounts

#------------------------------------------------------------------------

COUNT=`curl -su $MAIL_USER:$MAIL_PASS https://mail.google.com/mail/feed/atom || echo "<fullcount>0</fullcount>"`
COUNT=`echo "$COUNT" | grep -oPm1 "(?<=<fullcount>)[^<]+" `

#------------------------------------------------------------------------

if [ "$COUNT" -gt 0 ] 
   then
       echo "<span foreground='#b294bb'>ï€œ</span><span foreground='#B4B7B4'> $COUNT</span>"
  else
       exit 0
   fi

#------------------------------------------------------------------------

case $BLOCK_BUTTON in
  1) nohup chromium --app=https://mail.google.com & ;;
esac
