#!/bin/bash
# Pacman updates
#------------------------------------------------------------------------

PACMAN=$(checkupdates | wc -l)

#------------------------------------------------------------------------

# only display if 10 packages or more 
if [ "$PACMAN" -gt 9 ] 
   then
       echo "<span font='8' foreground='#81A2BE'>ïˆ™ </span><span foreground='#B4B7B4'>$PACMAN</span>"
   else 
       exit 0
   fi

#------------------------------------------------------------------------

case $BLOCK_BUTTON in
  1) i3-msg exec "chromium --app=http://ald.mindbrain.io" ;; # left click, read arch linux news feeds 
  3) nohup termite --exec "pacaur -Syu" --name "pacaur" --hold & ;; # right click, update system
esac
