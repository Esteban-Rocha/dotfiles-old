bindsym $mod+Shift+Print exec "scrot -u -d 3 -q 100 -e 'mv $f ~/Afbeeldingen/Schermafdruk/Schermafdruk_%d-%m-%Y_%T.png; eog --fullscreen ~/Afbeeldingen/Schermafdruk/Schermafdruk_%d-%m-%Y_%T.png'"

