#!/bin/bash
# exit session

CMD=$(echo -e "exit i3\nkill user\nkill X\nlock" | rofi -width 350 -dmenu -p exit:)
case $CMD in
    'exit i3')
        i3-msg exit
        ;;
    'kill user')
        loginctl kill-user $USER
        ;;
    'kill X')
        WM_PID=$(xprop -id $(xprop -root _NET_SUPPORTING_WM_CHECK \
            | awk -F'#' '{ print $2 }') _NET_WM_PID \
            | awk -F' = ' '{ print $2 }')
        kill -15 $WM_PID
        ;;
    'lock')
        ilockit
        ;;
esac
