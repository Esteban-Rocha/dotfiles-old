# meta key
set $mod Mod4

# fonts
font pango: Source Code Pro Semibold, FontAwesome Regular 9

# move windows with mouse+$mod
floating_modifier $mod

# i3 swag \O_o/
exec i3-msg workspace 0   
bindsym $mod+Shift+i workspace 0   

# keycombo's
bindsym $mod+Return exec termite --name 'ws1_termite'
bindsym $mod+backslash exec i3-sensible-terminal 
bindsym $mod+slash exec chromium --show-app-list
bindsym $mod+t exec subl3 
bindsym $mod+c exec chromium
bindsym $mod+i exec iceweasel
bindsym $mod+b exec caja
bindsym $mod+m exec geary
#bindsym $mod+m exec chromium --profile-directory=Default --app-id=pkclgpgponpjmpfokoepglboejdobkpl #google inbox 
bindsym $mod+p exec chromium --profile-directory=Default --app-id=fahmaaghhglfmonjliepjlchgpgfmobi #google music player
bindsym --release $mod+Shift+p exec xdotool type --clearmodifiers `xclip -selection c -out`  #extra paste command
bindsym $mod+g exec gvim -geom=120x42+200+23
bindsym $mod+Shift+XF86AudioMute exec pavucontrol
bindsym $mod+d exec --no-startup-id j4-dmenu-desktop --dmenu="/usr/bin/rofi -dmenu -p 'apps:'"
bindsym $mod+a exec rofi -show run
bindsym $mod+Tab exec rofi -show window 
bindsym $mod+Shift+Return exec termite --name "scratch_termite"
bindsym $mod+XF86Reload exec termite --name "WiFi-Menu" -e "sh -c 'echo 'WiFi-Menu:' && sudo wifi-menu -o'"
bindsym $mod+Shift+m exec --no-startup-id pkill perl; exec sh -c 'menutray -r -i -u'

#focus windows
no_focus [window_role="pop-up"]
focus_on_window_activation focus
for_window [class="(?i)"] focus

#float windows
for_window [window_role="task_dialog|app|bubble|pop-up|page-info|Preferences"] floating enable
for_window [window_type="dialog|menu"] floating enable
for_window [title="Steam - Update*|Event Tester|Taakbeheer -*"] floating enable
for_window [instance="xfontsel|xfd|gpicsview|gufw.py|Toplevel|gvim|arandr|blueman-manager|blueman-services|lxappearance|catfish|pavucontrol|transmission-gtk|xpad|galculator|engrampa|eom|sun-awt-X11-XFramePeer|net-minecraft-bootstrap-Bootstrap|guvcview|gpicview|simplescreenrecorder|radiotray|mate-search-tool|qtfm|yad|gsimplecal|deluge|WiFi-Menu|mate-dictionary|system-config-printer.py|dconf-editor|stalonetray"] floating enable
for_window [instance="crx_aohghmighlieiainnegkcijnfilokake|crx_aohghmighlieiainnegkcijnfilokake|crx_pkclgpgponpjmpfokoepglboejdobkpl|crx_hjaaapkoiljkjpgpfgckfielajkdjhik"] floating disable #google books|docs|inbox|netflix

#scratchpad, move windows + sticky
for_window [instance="scratch_termite"]  move scratchpad, move position 690 405, move scratchpad
for_window [instance="crx_fahmaaghhglfmonjliepjlchgpgfmobi"]  sticky enable, move position 1050 450, focus,  move scratchpad, scratchpad show #google music player
for_window [class="(?i)Gpicview"]  move position center
for_window [instance="insync"] move position 945 22
for_window [class="(?i)pavucontrol"] move position mouse
for_window [instance="file_progress"] sticky enable
for_window [class="(?i)gsimplecal"] move position 1118 21

#layout
for_window [workspace="$WS2|$WS4"] layout tabbed

#window actions
bindsym $mod+Shift+s sticky toggle
bindsym $mod+y fullscreen disable; floating enable; resize set 580 342; sticky enable; move position 772 415 

#window titles
for_window [class="(?i)"] title_format   "     %title"

# move windows to workspaces
assign [instance="urxvt|ws1_termite"] $WS1
assign [window_role="browser"] $WS2
assign [instance="caja"] $WS3
assign [instance="geary|libreoffice*|abiword|atril|gucharmap|crx_pkclgpgponpjmpfokoepglboejdobkpl|crx_aohghmighlieiainnegkcijnfilokake|play.google.com__books|evince|xournal"] $WS4
assign [instance="subl3|sublime_text|geany"] $WS5
assign [instance="crx_hjaaapkoiljkjpgpfgckfielajkdjhik|audacious|quodlibet|banshee|deadbeef|google-musicmanager|lollypop|spotify|audacious|deadbeef|Plex|Kodi"] $WS6
assign [instance="cheese|guvcview|gimp|inkscape|simple-scan|gthumb"] $WS7
assign [instance="sol|Steam|frogatto|sun-awt-X11-XFramePeer|net-minecraft-bootstrap-Bootstrap|supertuxkart|gnome-chess"] $WS8
assign [instance="htop|virt-manager|virtualBox|log_term|pacaur|glances_term|htop_term|pacaur|mate-system-monitor|gparted|gnome-disks|gitg|seahorse"] $WS9

