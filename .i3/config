#i3 config file (by leofa)
#
#please see http://i3wm.org/docs/userguide.html for a complete reference!

# meta keys
set $mod  Mod4
set $mod1 Mod1
set $mod2 shift
set $mod3 control

# fonts
font pango: Source Code Pro Semibold, FontAwesome Regular 9

# move windows with mouse+$mod
floating_modifier $mod

# i3 swag  ┐('～`)┌ 
bindsym $mod+Shift+i workspace 0<span font='Hack 10' font_weight='bold' foreground='#f9f9f9'>i3wm</span>
exec xdotool key Super_L+Shift+i #start i3 with a logo

#bindsym $mod+Shift+i workspace 0<span font='10' weight='light' underline='low'>3</span>
#bindsym $mod+Shift+i workspace 0<span font='10' weight='normal'>i</span><span font='9' font_weight='bold' >〣</span>
#bindsym $mod+Shift+i workspace 0<span font='9' font_weight='bold' >┐('～`)┌</span>

# keycombo's
bindsym $mod+Return exec termite --name 'ws1_termite' #terminal on workspace 1
bindsym $mod+backslash exec i3-sensible-terminal
bindsym $mod1+space exec rofi-find #locate +xdg-open files with rofi
bindsym $mod+slash exec rofi-s #rofi search with s
bindsym $mod+c exec chromium
bindsym $mod+n exec chromium --new-window
bindsym $mod+i exec chromium --incognito
bindsym $mod+b exec caja
bindsym $mod+Shift+b exec rofi -width 55 -modi "fb:rofi-fb" -show fb #rofi filebrowser 
bindsym $mod+m exec chromium --app=https://mail.google.com
bindsym $mod+Shift+XF86AudioRaiseVolume exec chromium --app=https://play.google.com/music
bindsym $mod+Shift+XF86AudioLowerVolume exec termite --name "cmus_termite" -e cmus 
bindsym $mod+g exec gvim -geom=120x42+200+23
bindsym $mod+Shift+XF86AudioMute exec pavucontrol
bindsym $mod+d exec j4-dmenu-desktop --display-binary --term="termite -e --hold" --dmenu="/usr/bin/rofi -dmenu -i -p 'apps:'"
bindsym $mod+Shift+a exec rofi -run-command "gksu {cmd}" -show run -p 'gksu' #w00t 
bindsym $mod+a exec rofi -show run
bindsym $mod1+XF86Forward exec rofi -show run
bindsym $mod+Tab exec rofi -show window 
bindsym $mod+Shift+Return exec termite --name "scratch_termite"
bindsym $mod+XF86Reload exec termite --name "WiFi-menu" -e "sh -c 'echo 'WiFi-menu:' && sudo wifi-menu -o'"
bindsym $mod+p exec passmenu --notify 
bindsym $mod+Shift+p exec qtpass

#focus windows
no_focus [window_role="pop-up"]
focus_on_window_activation focus
for_window [class="(?i)"] focus

#float windows
for_window [window_role="task_dialog|bubble|page-info|Preferences"] floating enable
for_window [title="Steam - Update*|Event Tester|Taakbeheer -*"] floating enable
for_window [instance="crx_hmjkmjkepdijhoojdojkdfohbdgmmhki|chromium_app_list|radio|feh|qtpass|vitetris|xfontsel|xfd|gufw.py|gvim|arandr|blueman-manager|blueman-services|lxappearance|catfish|pavucontrol|transmission-gtk|xpad|galculator|engrampa|eomp|Minecraft 1.*|sun-awt-X11-XFramePeer|net-minecraft-bootstrap-Bootstrap|guvcview|mirage|gpicview|simplescreenrecorder|radiotray|mate-search-tool|qtfm|yad|gsimplecal|deluge|WiFi-menu"] floating enable

#scratchpad, move windows + sticky
for_window [instance="scratch_termite"]  move scratchpad, move position 690 405, move scratchpad, scratchpad show
for_window [instance="crx_fahmaaghhglfmonjliepjlchgpgfmobi"]  sticky enable, move position pointer, move scratchpad, scratchpad show #google music player
for_window [class="(?i)Gpicview|mirage"]  move position center
for_window [class="(?i)gsimplecal|yadinfo|(?i)pavucontrol|(?i)insync"] move position pointer
for_window [instance="file_progress"] sticky enable
for_window [instance="WiFi-menu"]  resize set 455 445; move position pointer
for_window [class="gcolor2|timesup|QtPass|GtkFileChooserDialog"] sticky enable
for_window [instance="radio"]  resize set 355 445; move position pointer; sticky enable 

#layout
for_window [workspace="$WS4"] layout tabbed

#window actions
bindsym $mod+Shift+s sticky toggle
#fullscreen vids to small sticky in corner aka picture in picture mode 
bindsym $mod+y fullscreen disable, floating enable, resize set 422 240, sticky enable, move position 933 518 

#window title format
for_window [class="(?i)"] title_format "<span font='10' weight='heavy' foreground='#282a2e'>   </span><span weight='ultraheavy' >%title</span>"

# move windows to workspaces
assign [instance="urxvt|ws1_termite"] $WS1
assign [window_role="browser"] $WS2
assign [instance="bookmarks|file_properties|property_browser|caja"] $WS3
assign [instance="calendar.google.com|keep.google.com|mail.google.com|geary|libreoffice*|abiword|gucharmap|crx_pkclgpgponpjmpfokoepglboejdobkpl|crx_aohghmighlieiainnegkcijnfilokake|play.google.com__books|evince|xournal"] $WS4
assign [instance="subl3|sublime_text|geany"] $WS5
assign [instance="cmus_termite|play.google.com__music|crx_dcklljkfaobhfnaedpcomheadfemjkji|crx_hjaaapkoiljkjpgpfgckfielajkdjhik|audacious|quodlibet|banshee|deadbeef|google-musicmanager|gmusicbrowser|spotify|audacious|deadbeef|Plex|Kodi"] $WS6
assign [instance="cheese|guvcview|gimp|inkscape|simple-scan|gthumb"] $WS7
assign [instance="sol|frogatto|sun-awt-X11-XFramePeer|net-minecraft-bootstrap-Bootstrap|supertuxkart|gnome-chess"] $WS8
assign [instance="remmina|htop|virt-manager|log_term|pacaur|glances_term|htop_term|pacaur|gparted|gnome-disks|gitg|seahorse"] $WS9
assign [class="(?)Steam"] 7  

# workspace names / variables 
set $WS1 1  
set $WS2 2  
set $WS3 3  
set $WS4 4  
set $WS5 5  
set $WS6 6  
set $WS7 7  
set $WS8 8  
set $WS9 9  
set $WS0 10  

# multimonitor support
workspace "$WS1" output HDMI1
workspace "$WS2" output eDP1
workspace "$WS3" output eDP1
workspace "$WS4" output eDP1
workspace "$WS5" output eDP1
workspace "$WS6" output HDMI1
workspace "$WS7" output HDMI1
workspace "$WS8" output HDMI1
workspace "$WS9" output HDMI1
workspace "$WS0" output HDMI1

# workspace_layout tabbed
force_display_urgency_hint 500 ms

# floating window sizes
floating_minimum_size 96 x 25
floating_maximum_size -1 x -1

# focus urgent
bindsym $mod+u [urgent=latest] focus

# bar modus
bindsym $mod+Shift+h bar mode toggle
bindsym $mod+Shift+minus bar mode dock
bindsym $mod+minus bar mode invisible

# cycle through active workspaces
bindsym $mod+period workspace next
bindsym $mod+comma workspace prev

# brightness control
bindsym --release XF86MonBrightnessUp exec xbacklight -inc 5
bindsym --release XF86MonBrightnessDown exec xbacklight -dec 5
bindsym --release $mod+XF86MonBrightnessDown exec xbacklight -set 0
bindsym --release $mod+XF86MonBrightnessUp exec xbacklight -set 100

# sound control
bindsym XF86AudioRaiseVolume exec amixer -q set Master 5%+ unmute && pkill -SIGRTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec amixer -q set Master 5%- unmute && pkill -SIGRTMIN+10 i3blocks
bindsym XF86AudioMute exec amixer -q set Master mute && pkill -SIGRTMIN+10 i3blocks

# player control
bindsym $mod+XF86AudioRaiseVolume exec playerctl next
bindsym $mod+XF86AudioLowerVolume exec playerctl previous
bindsym $mod+XF86AudioMute exec playerctl play-pause

# take screenshot + show
bindsym Print exec dscrot 
bindsym $mod+Print exec wscrot

# windows borders
smart_borders on
new_window pixel 4
new_float pixel 4

# change border
bindsym $mod+Shift+t border toggle

# scratchpad
bindsym $mod+Shift+plus move scratchpad
bindsym $mod+plus scratchpad show

# kill focused window
bindsym $mod+q kill
bindsym --release $mod+x exec xkill

# mouse actions 
bindsym --whole-window $mod2+button2 kill
bindsym --whole-window $mod2+button3 floating toggle

# change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right

# alternatively, you can use the cursor keys
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+j move left 25px
bindsym $mod+Shift+k move down 25px
bindsym $mod+Shift+l move up 25px
bindsym $mod+Shift+semicolon move right 25px

# alternatively, you can use the cursor keys
bindsym $mod+Shift+Left move left 25px
bindsym $mod+Shift+Down move down 25px
bindsym $mod+Shift+Up move up 25px
bindsym $mod+Shift+Right move right 25px

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+F11 fullscreen
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+Shift+period focus parent

# focus the child container
bindsym $mod+Shift+comma focus child

# switch to workspace
bindsym $mod+1 workspace $WS1
bindsym $mod+2 workspace $WS2
bindsym $mod+3 workspace $WS3
bindsym $mod+4 workspace $WS4
bindsym $mod+5 workspace $WS5
bindsym $mod+6 workspace $WS6
bindsym $mod+7 workspace $WS7
bindsym $mod+8 workspace $WS8
bindsym $mod+9 workspace $WS9
bindsym $mod+0 workspace $WS0

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $WS1
bindsym $mod+Shift+2 move container to workspace $WS2
bindsym $mod+Shift+3 move container to workspace $WS3
bindsym $mod+Shift+4 move container to workspace $WS4
bindsym $mod+Shift+5 move container to workspace $WS5
bindsym $mod+Shift+6 move container to workspace $WS6
bindsym $mod+Shift+7 move container to workspace $WS7
bindsym $mod+Shift+8 move container to workspace $WS8
bindsym $mod+Shift+9 move container to workspace $WS9
bindsym $mod+Shift+0 move container to workspace $WS0

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace
bindsym $mod+Shift+r restart

# exit i3
bindsym $mod+Shift+e exec rofi-exit

# lockscreen
set $Locker ilockit
bindsym $mod+Escape exec $Locker

# logout dialog
bindsym XF86PowerOff exec rofi-logout

# quick suspend
bindsym $mod+XF86PowerOff exec systemctl suspend

# resize window
bindsym $mod+r mode "  "
mode "  " {
     bindsym j resize shrink width 10 px or 10 ppt
     bindsym k resize grow height 10 px or 10 ppt
     bindsym l resize shrink height 10 px or 10 ppt
     bindsym semicolon resize grow width 10 px or 10 ppt
     bindsym Left resize shrink width 10 px or 10 ppt
     bindsym Down resize grow height 10 px or 10 ppt 
     bindsym Up resize shrink height 10 px or 10 ppt
     bindsym Right resize grow width 10 px or 10 ppt
     bindsym Return mode "default"
     bindsym Escape mode "default"
}

# other stuff
focus_follows_mouse no
popup_during_fullscreen smart
force_display_urgency_hint 500 ms
workspace_auto_back_and_forth no

# define gaps
smart_gaps on
gaps outer 0
gaps inner 1

# statusbar
bar {
     status_command i3blocks
     position top
     height 21    
     separator_symbol "|"
     workspace_buttons yes
     strip_workspace_numbers yes
     bindsym button2 exec rofi -show ssh  
     bindsym button4 nop 
     bindsym button5 nop
     tray_output eDP1
     tray_padding 3     

# slate theme   
colors {    
     # <bar>
     separator          #586e75 
     background         #282a2e
     statusline         #c5c8c6
     
     # <workclass>      <border> <bg> <text>
     focused_workspace  #586e75 #4e6269 #ffffff
     inactive_workspace #455057 #3b444a #c7c7c7
     active_workspace   #282a2e #373F45 #ffffff
     urgent_workspace   #282a2e #943b3a #ffffff
     binding_mode       #943b3a #943b3a #ffffff
  }
}
# <clientclass>          <border> <bg> <text> <indicator>
client.focused          #282a2e #4e6269 #f9f9f9 #3d9fb8
client.focused_inactive #282a2e #3b444a #c7c7c7 #205360
client.unfocused        #282a2e #373F45 #c7c7c7 #354347
client.urgent           #282a2e #ae4544 #f9f9f9 #ae4544
